{
  "enabled": true,
  "name": "Pytest with Venv",
  "description": "Run pytest using virtual environment when Python test files are saved",
  "version": "1",
  "when": {
    "type": "fileSaved",
    "patterns": ["**/test_*.py", "**/*_test.py", "**/tests/**/*.py"]
  },
  "then": {
    "type": "runCommand",
    "command": "./venv/bin/python -m pytest ${file} -v --tb=short"
  }
}
