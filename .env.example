# SuperInsight Platform - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=SuperInsight
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://superinsight:password@localhost:5432/superinsight
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# LLM Integration
# =============================================================================
LLM_HEALTH_CHECK_INTERVAL=60
LLM_MAX_FAILURES=3
OPENAI_API_KEY=your-openai-api-key
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# AI Annotation Settings
# =============================================================================
# Batch Processing
ANNOTATION_BATCH_SIZE=100
ANNOTATION_MAX_CONCURRENCY=20
ANNOTATION_BATCH_TIMEOUT_SECONDS=3600

# Model Caching
MODEL_CACHE_STRATEGY=lru
MODEL_CACHE_MAX_SIZE_MB=1024
MODEL_CACHE_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Quality Thresholds
ANNOTATION_CONFIDENCE_THRESHOLD=0.7
ANNOTATION_REVIEW_THRESHOLD=0.5
ANNOTATION_AUTO_ACCEPT_THRESHOLD=0.95

# Real-time Suggestions
SUGGESTION_LATENCY_TARGET_MS=100
SUGGESTION_CACHE_ENABLED=true
SUGGESTION_CACHE_TTL_SECONDS=300

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_CONNECTIONS_PER_PROJECT=100
WEBSOCKET_MESSAGE_QUEUE_SIZE=1000

# Engine Configuration
ENGINE_HEALTH_CHECK_INTERVAL=30
ENGINE_MAX_CONSECUTIVE_FAILURES=3
ENGINE_FALLBACK_ENABLED=true

# Redis Pub/Sub for WebSocket
REDIS_PUBSUB_CHANNEL_PREFIX=annotation:

# =============================================================================
# Label Studio & Argilla
# =============================================================================
LABEL_STUDIO_URL=http://localhost:8080
LABEL_STUDIO_API_KEY=your-label-studio-api-key
ARGILLA_URL=http://localhost:6900
ARGILLA_API_KEY=your-argilla-api-key

# =============================================================================
# Text-to-SQL Settings
# =============================================================================
TEXT_TO_SQL_DEFAULT_METHOD=auto
TEXT_TO_SQL_CACHE_ENABLED=true
TEXT_TO_SQL_DEFAULT_LLM_REQUESTS_LIMIT=10000

# =============================================================================
# Security
# =============================================================================
JWT_SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
