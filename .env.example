# SuperInsight Platform Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/superinsight
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=superinsight
DATABASE_USER=username
DATABASE_PASSWORD=password

# Label Studio Configuration
LABEL_STUDIO_URL=http://localhost:8080
LABEL_STUDIO_API_TOKEN=your_api_token_here
LABEL_STUDIO_PROJECT_ID=1

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-encryption-key-here

# Audit Log Configuration
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years retention
AUDIT_BATCH_SIZE=1000
AUDIT_COMPRESSION_ENABLED=true
AUDIT_INTEGRITY_ENABLED=true
AUDIT_DIGITAL_SIGNATURE_KEY=your-audit-signature-key-here

# Data Desensitization Configuration
PRESIDIO_ENABLED=true
PRESIDIO_ANALYZER_ENABLED=true
PRESIDIO_ANONYMIZER_ENABLED=true
DESENSITIZATION_DEFAULT_LANGUAGE=zh
DESENSITIZATION_CONFIDENCE_THRESHOLD=0.8
DESENSITIZATION_AUTO_DETECTION_ENABLED=true
DESENSITIZATION_REAL_TIME_ENABLED=true

# RBAC Permission Configuration
RBAC_ENABLED=true
RBAC_CACHE_ENABLED=true
RBAC_CACHE_TTL=300
RBAC_REDIS_ENABLED=true
PERMISSION_CHECK_TIMEOUT=10  # 10ms permission check timeout
PERMISSION_CACHE_SIZE=10000

# Security Monitoring Configuration
SECURITY_MONITORING_ENABLED=true
THREAT_DETECTION_ENABLED=true
SECURITY_ALERT_ENABLED=true
SECURITY_SCAN_INTERVAL=30  # 30 seconds scan interval
SECURITY_AUTO_RESPONSE_ENABLED=true
SECURITY_DASHBOARD_ENABLED=true

# Compliance Reporting Configuration
COMPLIANCE_REPORTS_ENABLED=true
COMPLIANCE_STANDARDS=GDPR,SOX,ISO27001,HIPAA,CCPA
COMPLIANCE_AUTO_GENERATION=true
COMPLIANCE_REPORT_RETENTION_DAYS=2555  # 7 years retention

# Multi-Factor Authentication
MFA_ENABLED=false
MFA_METHODS=TOTP,SMS,EMAIL
MFA_TOTP_ISSUER=SuperInsight

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_MAX_AGE_DAYS=90

# AI Services Configuration
# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# HuggingFace Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
HUGGINGFACE_MODEL=bert-base-chinese

# Chinese LLM APIs
ZHIPU_API_KEY=your_zhipu_api_key_here
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here
ALIBABA_API_KEY=your_alibaba_api_key_here
TENCENT_API_KEY=your_tencent_api_key_here

# Tencent Cloud TCB Configuration
TCB_ENV_ID=your_tcb_env_id_here
TCB_SECRET_ID=your_tcb_secret_id_here
TCB_SECRET_KEY=your_tcb_secret_key_here

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
APP_NAME=SuperInsight Platform
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB

# Quality Management Configuration
RAGAS_API_KEY=your_ragas_api_key_here
QUALITY_THRESHOLD=0.8

# Billing Configuration
BILLING_CURRENCY=CNY
BILLING_RATE_PER_HOUR=100.0
BILLING_RATE_PER_ANNOTATION=1.0